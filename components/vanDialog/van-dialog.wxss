/* components/vanDialog/van-dialog.wxss */

.login-dialog {
  /* display: none; */
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, .5);

}
.dialog-container {
  position: absolute;
  left: 50%;
  top: 160rpx;
  width: 650rpx;
  height: 634rpx;
  border-radius: 10rpx;
  box-sizing: bordre-box;
  transform: translateX(-50%);
  overflow: hidden;
  background: #fff;
}

.dialog-text {
  margin: 50rpx;
  font-size: 36rpx;
  font-family: PingFangHK-Medium, PingFangHK;
  font-weight: 500;
  color: #222222;
  line-height: 50rpx;
}

.dialog-btn {
  width: 560rpx;
  height: 100rpx;

  background: #FE1604;
  border-radius: 3px;

  font-size: 36rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #FFFFFF;
  line-height: 100rpx;
}
.dialog-bottom{
  margin:30rpx 280rpx;
  font-size: 30rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #888888;
  line-height: 42rpx;
}